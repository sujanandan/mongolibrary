      <div class="addauthor">               
        <form action="/author/<%=author._id%>/update/ok"method="POST">
          <div id="elementDiv">
            <h3>&nbsp&nbsp&nbsp&nbsp Update Author</h3>
         <b>Name:</b>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<input type="text" name="name"value="<%=author.name%>"> <br><br>
         <b> Language:</b><input type="text" name="lang"value="<%=author.lang%>"><br><br>
         <b>Book:</b>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<input type="text" name="book"value="<%=author.book%>"><br><br>
         <b>Desc</b><br>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<textarea id="desc" name="desc" rows="4" cols="50"value="<%=author.desc%>"></textarea>
         <br>  <b>Image:</b>&nbsp&nbsp&nbsp<input type="file" name="image"value=""><br><br>

         <%var imagevar=author.image%>
         <input type="hidden" type="hidden" name="imageid" value="<%=imagevar%>"/>
         <button type="submit"id="addbtnauthor">Update Author</button>
        </div>
         </form>
      </div> 
</body>
